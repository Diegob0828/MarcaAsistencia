<Window x:Class="MarcaAsistencia.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login - Marca de Asistencia" Height="446" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Closing="Window_Closing">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0" Text="Sistema de Marca de Asistencia" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,30"/>

        <!-- Contenedor del formulario -->
        <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1" 
                CornerRadius="5" Padding="20" Background="White">
            <StackPanel>
                <TextBlock Text="Usuario:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtUsername" Width="300" Height="35" 
                         Margin="0,0,0,15" Padding="8"/>

                <TextBlock Text="Contraseña:" FontWeight="Bold" Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtPassword" Width="300" Height="35" 
                             Margin="0,0,0,20" Padding="8"/>

                <Button x:Name="btnLogin" Content="Iniciar Sesión" 
                        Click="BtnLogin_Click" Width="300" Height="40" 
                        Background="#0078D4" Foreground="White" 
                        FontWeight="Bold" Cursor="Hand" 
                        Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- Mensaje -->
        <TextBlock x:Name="lblMensaje" Grid.Row="2" 
                   HorizontalAlignment="Center" Margin="0,20,0,0" 
                   FontWeight="Bold" TextWrapping="Wrap" 
                   TextAlignment="Center"/>

        <!-- Versión -->
        <TextBlock Grid.Row="3" Text="v1.0" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Bottom" Margin="0,10,0,0" 
                   FontSize="10" Foreground="Gray"/>
    </Grid>
</Window>