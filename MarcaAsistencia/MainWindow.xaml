<Window x:Class="MarcaAsistencia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Marca de Asistencia" Height="520" Width="800">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
            <TextBlock Text="Nombre del empleado:" FontWeight="Bold"/>
            <TextBox x:Name="txtEmpleado" Width="250" Margin="0,5,0,10"/>
            <WrapPanel>
                <Button Content="Entrada" Click="BtnEntrada_Click" Margin="5" Width="120"/>
                <Button Content="Ida Comer" Click="BtnIdaComer_Click" Margin="5" Width="120"/>
                <Button Content="Vuelta Comer" Click="BtnVueltaComer_Click" Margin="5" Width="120"/>
                <Button Content="Salida" Click="BtnSalida_Click" Margin="5" Width="120"/>
                <Button Content="Refrescar" Click="BtnRefrescar_Click" Margin="5" Width="100"/>
                <Button Content="Generar Reporte PDF" Click="BtnGenerarReporte_Click" Margin="5" Width="150"/>
                <Button Content="Gestionar Usuarios" Click="BtnGestionarUsuarios_Click" Margin="5" Width="150"/>
            </WrapPanel>
            <TextBlock x:Name="lblMensaje" FontWeight="Bold" Margin="0,8,0,0" Foreground="DarkGreen"/>
        </StackPanel>
        <DataGrid x:Name="dgAsistencias" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Empleado" Binding="{Binding NombreEmpleado}" Width="*"/>
                <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha, StringFormat={}{0:dd/MM/yyyy}}" Width="120"/>
                <DataGridTextColumn Header="Entrada" Binding="{Binding Entrada, StringFormat={}{0:HH:mm:ss}}" Width="110"/>
                <DataGridTextColumn Header="Ida Comer" Binding="{Binding IdaComer, StringFormat={}{0:HH:mm:ss}}" Width="110"/>
                <DataGridTextColumn Header="Vuelta Comer" Binding="{Binding VueltaComer, StringFormat={}{0:HH:mm:ss}}" Width="110"/>
                <DataGridTextColumn Header="Salida" Binding="{Binding Salida, StringFormat={}{0:HH:mm:ss}}" Width="110"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
