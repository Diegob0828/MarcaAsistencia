<Window x:Class="MarcaAsistencia.Views.UserManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Usuarios" Height="400" Width="600"
        WindowStartupLocation="CenterScreen">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
            <TextBlock Text="Gestión de Empleados" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Username:" FontWeight="Bold" Margin="0,0,5,5"/>
                <TextBox x:Name="txtUsername" Grid.Row="0" Grid.Column="1" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Contraseña:" FontWeight="Bold" Margin="0,0,5,5"/>
                <PasswordBox x:Name="txtPassword" Grid.Row="1" Grid.Column="1" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Nombre:" FontWeight="Bold" Margin="0,0,5,5"/>
                <TextBox x:Name="txtNombre" Grid.Row="2" Grid.Column="1" Margin="0,0,0,5"/>

                <WrapPanel Grid.Row="3" Grid.Column="1" HorizontalAlignment="Right">
                    <Button Content="Agregar" Click="BtnAgregar_Click" Width="100" Margin="5"/>
                    <Button Content="Editar" Click="BtnEditar_Click" Width="100" Margin="5"/>
                    <Button Content="Eliminar" Click="BtnEliminar_Click" Width="100" Margin="5"/>
                </WrapPanel>
            </Grid>
            <TextBlock x:Name="lblMensaje" FontWeight="Bold" Margin="0,10,0,0" Foreground="DarkGreen"/>
        </StackPanel>

        <DataGrid x:Name="dgUsuarios" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="DgUsuarios_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="150"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
